# Application
NODE_ENV=development
PORT=5000
API_PREFIX=/api

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=desa_db_dev

# Test Database
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USER=postgres
TEST_DB_PASSWORD=postgres
TEST_DB_NAME=desa_db_test

# JWT
JWT_SECRET=your-secret-key-here
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# File Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_DIR=uploads/

# Rate Limiting
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Email
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@desadigital.id

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 0 * * *
BACKUP_DIR=backups/
BACKUP_RETENTION=7

# Security
BCRYPT_ROUNDS=10

# Metrics
METRICS_ENABLED=true
METRICS_INTERVAL=60000

# Cache
CACHE_ENABLED=true
CACHE_TYPE=memory
CACHE_TTL=3600

# Redis (if using redis cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# PDF Generation
PDF_TEMP_DIR=temp/
PDF_FONT_DIR=assets/fonts/
PDF_HEADER_TEMPLATE=templates/header.html
PDF_FOOTER_TEMPLATE=templates/footer.html

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION=90

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS=false
ENABLE_BACKUP=true
ENABLE_METRICS=true
ENABLE_CACHE=true

# Third Party Services
# Add any third party service credentials here
