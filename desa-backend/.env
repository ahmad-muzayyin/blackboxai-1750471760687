# Application
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=desa_digital
DB_USER=root
DB_PASSWORD=root
DB_DIALECT=mysql

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# File Upload
UPLOAD_PATH=uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/*,application/pdf

# Email (optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_FROM=no-reply@desadigital.id

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Backup
BACKUP_PATH=backups
BACKUP_RETENTION_DAYS=30

# PDF Generation
PDF_TEMPLATE_PATH=templates/pdf
PDF_OUTPUT_PATH=public/documents

# Analytics
ANALYTICS_ENABLED=true
METRICS_ENABLED=true

# Feature Flags
FEATURE_BANTUAN_SOSIAL=true
FEATURE_APBDES=true
FEATURE_SURAT_ONLINE=true
FEATURE_PENGADUAN=true
